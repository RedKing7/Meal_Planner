<h1>{{user.name}}</h1>
{{!-- <h3>Username: {{user.username}}</h3> --}}
<hr>
{{#if user.meals}}
<h3>Meals: </h3>
<ul>
   {{#each user.meals}}
      <li>{{this.name}} on {{this.day}}</li>
   {{/each}}
</ul>
<a href="/users/{{user._id}}/false/meals/">Details</a>
<br><br>
{{else}}
   <p>No meals yet</p>
{{/if}}
<a href="/users/{{user._id}}/false/meals/new">Add meal</a>
<br><br>
<a href="/users/{{user._id}}/edit/">Edit User</a>
<hr>
<a href="/users/">Back to users</a>